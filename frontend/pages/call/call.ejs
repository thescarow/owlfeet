                    <%- include("../partials/icons/callRoomInfoIcon.svg") _%>
                </div>
                <div class="on-call-btn__icon on-call-btn__icon--selected">
                    <%- include("../partials/icons/callRoomInfoIcon.svg") _%>
                </div>
            </div>

